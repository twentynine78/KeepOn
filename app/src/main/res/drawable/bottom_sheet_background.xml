<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/shape_bottom_sheet_background">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/colorBorder" />
            <padding
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp" />
            <corners
                android:radius="5dp" />
            <solid
                android:color="@color/colorBottomSheet" />
        </shape>
    </item>
</layer-list>